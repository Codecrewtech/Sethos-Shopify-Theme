{% if settings.slider_home_enable %}
    <section id="slideshow" class="clearfix"> 
      	{% include 'slideshow' %}
    </section>
{% endif %}
<section id="columns" class="columns-container">
  	<div class="container">
        <div id="center_column" class="center_column">
            <div class="center_wrap">
                {% if settings.home_html_enable %}
                    <div class="row {{ settings.home_html_class }}">
                        <div class="col-xs-12 col-sm-12">
                            {% include 'ap-homepage-html' %}
                        </div>
                    </div>
                {% endif %}
              	{% if settings.home_htban_enable %}
              		<div class="row {{ settings.home_html_class }}">
                      	<div class="col-xs-12 col-sm-12">
                          	{% include 'ap-homepage-banner' %}
                      	</div>
              		</div>
              	{% endif %}
                {% if settings.home_productlists_enable %}
                    <div class="row {{ settings.home_productlists_class }}">
                        <div class="col-xs-12 col-sm-12">
                      		{% assign item_in_page = settings.home_productlists_itempage | plus:0 %}
                            {% assign columns_product = settings.home_productlists_columntab | plus:0 %}
                            {% assign product_in_tab = settings.home_productlists_limit | plus:0 %}
                      		{% assign title_block = settings.home_productlist_title %}
                          	{% assign title_block_bg = settings.home_productlist_bgtext %}
                      		{% assign product_interval = settings.home_productlists_interval %}
                      		{% assign type_block = settings.home_productlists_type %}
                      		{% assign collection_produclists = collections[settings.home_productlists_collection].products %}
                          	{% assign proLazyLoad = settings.home_productlists_lazy %}
                      		{% include 'block-productlist' with '1' %}
                        </div>
                    </div>
                {% endif %}
              	{% if settings.home_vendor_carousel_enable %}
              		<div class="row {{ settings.home_vendor_carousel_class }}">
                      	<div class="col-xs-12 col-sm-12">
                          	{% include 'block-manucarousel' %}
                      	</div>
              		</div>
                {% endif %}
              	{% if settings.testimonials_enable %}
              		<div class="row {{ settings.testimonials_class }}">
                        <div class="col-xs-12 col-sm-12">
                            {% include 'block-testimonial' %}
                        </div>
              		</div>
              	{% endif %}
              	<div class="newsletter-bototm row">
                  	{% assign colClass = 'col-xs-12 col-sm-12 col-md-12' %}
                  	{% if settings.instagram_enable %}
                  		{% assign colClass = 'col-xs-12 col-sm-12 col-md-6' %}
                  		<div class="{{ colClass }}">
                  			{% include 'block-instagram' %}
                  		</div>
                  	{% endif %}
                  	{% if settings.homepage_newsletter_enable %}
                        <div class="{{ colClass }}">
                            <div class="dio-newsletter">
                              	<div class="newsletter-content">
                                    {% include 'block-newsletter' %}
                                    {% if settings.footer_social_enable %}
                                        {% include 'block-social' %}
                                    {% endif %}
                              	</div>
                            </div>
                        </div>
                  	{% endif %}
              	</div>
            </div>
        </div>
  	</div>
  	<script>
    	var link = {{ linklists | json }};
    	//var product = {{ products | json }};
  	</script>
</section>